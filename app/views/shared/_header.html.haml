%section#top-header.row
  %h1.span2
    = link_to "MyFLiX", home_path
  - if current_user
    %ul.span4.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    = render "shared/search"
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(class='dropdown-toggle' data-target='#' data-toggle='dropdown' href='#' id='dlabel' role='button')
            = "Hey " + current_user.full_name + "!"
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to  "Sign Out", sign_out_path
