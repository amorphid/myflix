%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2
            My Queue
          =form_for my_queue_path do |i|
            %table.table
              %thead
                %tr
                  %th(width="10%") List Order
                  %th(width="30%") Video Title
                  %th(width="10%") Play
                  %th(width="20%") Rating
                  %th(width="15%") Genre
                  %th(width="15%") Remove
              %tbody
                - @queued_videos.each do |queued_video|
                  %tr
                    %td
                      %input(name="queued_videos[queued_video_#{queued_video.id}][id]" type="hidden" value="#{queued_video.id}")
                      %input(name="queued_videos[queued_video_#{queued_video.id}][priority]" type="text" value="#{queued_video.priority}")
                    %td
                      = link_to queued_video.video.title, video_path(queued_video.video)
                    %td
                      = button_to "Play", nil, class: "btn"
                    %td
                      %select(name="")
                        %option(value="5") 5 Stars
                        %option(value="4") 4 Stars
                        %option(value="3") 3 Stars
                        %option(value="2") 2 Stars
                        %option(value="1") 1 Star
                    %td
                      = link_to "TV Shows"
                    %td
                      = link_to video_queued_video_path(queued_video.video, queued_video), method: :delete do
                        %i.icon-remove
            = i.submit
