%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @videos.each do |video|
              %tr
                %td
                  %input(type="text" value="1")
                %td
                  = link_to video.title, video_path(video)
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  %select(name="")
                    %option(value="5") 5 Stars
                    %option(value="4") 4 Stars
                    %option(value="3") 3 Stars
                    %option(value="2") 2 Stars
                    %option(value="1") 1 Star
                %td
                  = link_to "TV Shows"
                %td
                  = link_to create_or_destroy_queued_video_path(video_id: video.id), method: :post do
                    %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
