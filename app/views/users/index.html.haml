%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      -if current_user.follower
        - current_user.follower.users.each do |user|
          %tr
            %td
              %img(src="#{user.small_pic_url}")
              = link_to user.full_name, user_path(user)
            %td.extra-padding
              - if user.follower
                = user.follower.users.count
              - else
                0
            %td.extra-padding
              - if user.follower
                = user.follower.users.count
              - else
                0
            %td.extra-padding
              = link_to '<i class="icon-remove"></i>'.html_safe, follower_path(current_user, user_id: user.id), method: :delete
